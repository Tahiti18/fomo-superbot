{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "server.ts",
    "server.js",
    "bot.ts",
    "app/**/*"
  ]
}